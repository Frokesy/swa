--- 
interface Props {
	content: string;
    width: String | Number;
}

const { content, width } = Astro.props;
---


<div class="btn" style={`width: ${width}};`}>
  <button>
    <span>{content}</span>
    <svg
      width="30"
      height="30"
      viewBox="0 0 48 48"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <circle cx="24" cy="24" r="24" fill="#0F1621"></circle>
      <path
        d="M21.6097 15.6878L27.9707 22.0488C28.7219 22.8 28.7219 24.0293 27.9707 24.7805L21.6097 31.1415"
        stroke="white"
        stroke-width="1.5"
        stroke-miterlimit="10"
        stroke-linecap="round"
        stroke-linejoin="round"></path>
    </svg>
  </button>
</div>

<style>
  .btn button {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #404040;
    color: #fff;
    padding: 12px 24px;
    border-radius: 28px;
    border: none;
    font-size: 18px;
  }
  button span {
    margin-right: 30px;
  }

  @media screen and (max-width: 768px) {
    .btn button {
        width: 100%;
    }
  }
</style>
